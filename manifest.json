{
    "manifest_version": 2,
    "name": "Extension de recherche de texte en gras",
    "version": "1.0",
    "description": "Cette extension récupère le texte en gras sur une page web et lance une recherche web avec ce texte.",
    "permissions": [
      "activeTab",
      "contextMenus"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  